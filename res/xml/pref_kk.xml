<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
      
	<PreferenceCategory
	    android:title="ANDROID KITKAT">
	    
	    <EditTextPreference
	        android:defaultValue="K"
	        android:inputType="text"
	        android:key="kk_letter"
	        android:maxLength="1"
	        android:maxLines="1"
	        android:selectAllOnFocus="true"
	        android:singleLine="true"
	        android:title="@string/title_version_letter" />
	    
	    <EditTextPreference
	        android:defaultValue="ANDROID"
	        android:inputType="text"
	        android:key="kk_text"
	        android:maxLines="1"
	        android:selectAllOnFocus="true"
	        android:singleLine="true"
	        android:title="@string/title_version_num" />
	    
	    <ListPreference
	        android:title="@string/let_interpol"
	        android:key="kk_interpolator"
	        android:dialogTitle="Choose an interpolator for the rotating text"
	        android:entryValues="@array/Interpolators"
	        android:entries="@array/Interpolators"
	        android:defaultValue="@string/def_anim" />
	    
	    <EditTextPreference
	        android:defaultValue="6"
	        android:inputType="phone"
	        android:digits="0123456789"
	        android:key="kk_clicks"
	        android:maxLength="8"
	        android:maxLines="1"
	        android:selectAllOnFocus="true"
	        android:singleLine="true"
	        android:title="@string/title_clicks_int" />
	    
	    <ListPreference
	        android:title="@string/sysui_plat"
	        android:key="kk_sysui"
	        android:defaultValue="@string/none"
	        android:dialogTitle="Choose System UI mode for the KitKat platlogo"
	        android:entryValues="@array/SysUImodes"
	        android:entries="@array/SysUImodes" />
	
	</PreferenceCategory>

 <Preference android:enabled="false" android:selectable="false" android:key="null" />
    
    
</PreferenceScreen>
